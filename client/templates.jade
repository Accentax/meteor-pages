template(name="_pagesPage")
    {{#if ready}}
    {{#each items}}
    {{{item}}}
    {{/each}}
    {{else}}
    div(style="text-align:center")
        img(src="/packages/pages/loader.gif")
    {{/if}}

template(name="_pagesNav")
    {{#if show}}
    .pagination-cont(style="text-align:center", data-pages="{{name}}")
        ul.pagination
            {{#each paginationNeighbors}}
            li(class="{{active}} {{disabled}}")
                a(href="{{link}}") {{p}}
            {{/each}}
    {{/if}}
template(name="_pagesItemDefault")
    div(style="margin:5px 40px; padding: 10px; border: 1px solid #999; border-radius: 15px;")
        {{#each properties}}
        div
            i {{name}}
            |: {{value}}
        {{/each}}